<h1>Lost pets</h1>

<%= link_to 'Add new pet', new_pet_path %>

<% @pets.each do |pet| %>
  <%= link_to pet_path(pet) do %>
    <div>
      <h2><%= pet.name %></h2>
      <p><%= pet.species %></p>
      <% nb_days_ago = (Date.today - pet.lost_on).to_i %>
      <p>Lost <%= nb_days_ago %> <%= "day".pluralize(nb_days_ago) %> ago.</p>
    </div>
  <% end %>
<% end %>

